<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover">
  <thread class = "thread-dark">
  <tr>
   <th scope="col">Name</th>
   <th scope="col">Phone</th>
   <th scope="col">Handle</th>
   <th scope="col"></th>
  </tr>
  </thread>
  <tbody>
  <% @friends.each do |friend| %>
  <tr>
    <td><%= link_to friend.first_name + " " + friend.last_name, friend %> </td>
    <td><%= friend.phone %> </td>
    <td><%= friend.twitter %> </td>
    <td><%= link_to "destroy", friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
  <% end %>
</table>
  <%= link_to 'New Friend', new_friend_path, class: 'btn btn-secondary' %>